@model CommandGenerator.Models.Enchantment

@{
    ViewBag.Title = "Edit Enchantment";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Minecraft Command Generator</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <h2>@ViewBag.Title</h2>

                @using (Html.BeginForm("Edit", "Enchantment", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Type)
                        @Html.EnumDropDownListFor(model => model.Type, "Select Enchantment Type", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Type)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Item)
                        @Html.EnumDropDownListFor(model => model.Item, "Select Item Type", new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Item)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Level)
                        @Html.EditorFor(model => model.Level, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Level)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Creator)
                        @Html.EditorFor(model => model.Creator, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Creator)
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                }
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
